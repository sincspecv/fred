# Fred Framework Environment Variables
# Copy this file to .env and fill in your actual API keys
# Only set the variables for the providers you want to use

# ============================================================================
# Core Providers
# ============================================================================
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_key_here

# ============================================================================
# Fast & Cost-Effective Providers
# ============================================================================
GROQ_API_KEY=your_groq_key_here
MISTRAL_API_KEY=your_mistral_key_here
DEEPSEEK_API_KEY=your_deepseek_key_here

# ============================================================================
# Additional Providers
# ============================================================================
COHERE_API_KEY=your_cohere_key_here
FIREWORKS_API_KEY=your_fireworks_key_here
XAI_API_KEY=your_xai_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here
REPLICATE_API_KEY=your_replicate_key_here
TOGETHER_API_KEY=your_together_key_here
CEREBRAS_API_KEY=your_cerebras_key_here
DEEPINFRA_API_KEY=your_deepinfra_key_here
BASETEN_API_KEY=your_baseten_key_here

# ============================================================================
# Voice & Specialized Providers
# ============================================================================
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# ============================================================================
# Cloud Services
# ============================================================================

# Azure OpenAI/Anthropic (use @ai-sdk/azure)
AZURE_OPENAI_API_KEY=your_azure_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
# Alternative Azure configuration:
# AZURE_OPENAI_RESOURCE_NAME=your_resource_name
# AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# AWS Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=your_aws_region_here

# Vercel AI Gateway (optional)
AI_GATEWAY_API_KEY=your_vercel_gateway_key_here
VERCEL_API_KEY=your_vercel_key_here

# ============================================================================
# Local/Community Providers
# ============================================================================

# Ollama (typically doesn't require API key, uses baseURL)
# OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# Persistence (SQL Context Storage)
# ============================================================================

# Postgres connection string for production persistence
# FRED_POSTGRES_URL=postgres://user:pass@localhost:5432/fred

# SQLite database path (defaults to ./fred.db if not set)
# FRED_SQLITE_PATH=./data/fred.db

# ============================================================================
# Checkpoint Storage (Pipeline Resume)
# ============================================================================
# Checkpoints are automatically stored when persistence is enabled.
# Uses the same database as context storage (Postgres or SQLite).
#
# Configure checkpoint behavior in fred.config:
#   persistence:
#     adapter: 'postgres'  # or 'sqlite'
#     checkpoint:
#       enabled: true       # default: true
#       ttlMs: 604800000    # default: 7 days
#       cleanupIntervalMs: 3600000  # default: 1 hour
#
# Expired checkpoints are automatically cleaned up by a background task.

# ============================================================================
# Observability (OpenTelemetry Tracing and Logging)
# ============================================================================

# OTLP exporter endpoint for traces (optional)
# FRED_OTEL_ENDPOINT=http://localhost:4318/v1/traces

# OTLP exporter headers (optional, JSON object)
# FRED_OTEL_HEADERS={"Authorization":"Bearer your_token_here"}

# Minimum log level (trace|debug|info|warning|error|fatal)
# Defaults to 'debug' in development, 'info' in production
# FRED_LOG_LEVEL=debug

# ============================================================================
# Development/Testing
# ============================================================================
# NODE_ENV=development
# NODE_ENV=production
# NODE_ENV=test
